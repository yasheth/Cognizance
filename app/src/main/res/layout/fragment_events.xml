<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    tools:context="charusat.cognizance.events.EventsInsideFragment"
    android:id="@+id/content_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/cognizance3" /-->

        <!--TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Events"
            android:textSize="25sp"
            android:textStyle="bold" /-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/onclick_nontech">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="105dp"
                    android:id="@+id/imageview_nt"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Non-Tech" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"

                android:id="@+id/onclick_guestlectures">

                <ImageView
                    android:id="@+id/imageview_gl"
                    android:layout_width="wrap_content"
                    android:layout_height="105dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Guest Lectures" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/onclick_ce">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageview_ce"
                        app:srcCompat="@drawable/ic_computer"
                        android:layout_width="wrap_content"
                        android:layout_height="106dp"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Computer" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:id="@+id/onclick_it">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="105dp"
                        android:id="@+id/imageview_it"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Information Technology" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:id="@+id/onclick_ec">

                    <ImageView
                        android:id="@+id/imageview_ec"
                        android:layout_width="wrap_content"
                        android:layout_height="106dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Elect n Communication" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:id="@+id/onclick_electrical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/imageview_ee"
                        android:layout_height="106dp"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Electrical" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/onclick_mechanical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="105dp"
                        android:id="@+id/imageview_me"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Mechanical" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:id="@+id/onclick_civil">

                    <ImageView
                        android:id="@+id/imageview_cl"
                        android:layout_width="wrap_content"
                        android:layout_height="105dp"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Civil" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>



