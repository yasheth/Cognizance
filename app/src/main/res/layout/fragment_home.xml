<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="charusat.cognizance.home.HomeFragment">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_oval_prime"
            android:text="Welcome to Cognizance"
            android:textSize="20dp"
            android:textColor="@color/colorWhite" />


        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome to Cognizance"
            android:textSize="25sp"
            android:textStyle="bold" />
        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="Charusat Univercity welcomes you in this great event.We hope that your experience will became  best experience then anyother college's event "
            android:textSize="15sp"
            android:textStyle="bold"

            />

          <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_weight="0.11">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="So, that was the video of Cognizance which was celebrated by Charusat Univercity before one year ago. We hope you like that video."
            android:textSize="15sp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_weight="0.14">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
android:text="Above video was made in aftermovie. This is all about our event. Please participate in this event. It will be the best experience of yours."
            android:textSize="15sp"
            />


        <>
        <Button
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_oval_prime"
            android:text="Twitter"
            android:id="@+id/twitt"
            android:textSize="20dp"
            android:onClick="twitter"
            android:textColor="@color/colorWhite" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/shareapp"
            android:onClick="share"
            android:background="@drawable/shape_oval_prime"
            android:text="Share app"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />


        <Button
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_oval_prime"
            android:onClick="rateapp"
            android:text="Rate us"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        </android.support.v7.widget.RecyclerView>


</LinearLayout>
</android.support.v4.widget.NestedScrollView>
